{
	"image": "ghcr.io/pbrucla/ctf-dev-container:main",
	"customizations": {
		"vscode": {
			"extensions": [
				"mads-hartmann.bash-ide-vscode",
				"dbaeumer.vscode-eslint",
				"editorconfig.editorconfig"
			]
		},
		"settings": {
			"workbench.colorTheme": "Dark (Visual Studio)"
		}
	},
	"features": {
		"docker-in-docker": {
			"version": "latest",
			"moby": true,
			"dockerDashComposeVersion": "v2"
		}
	},
	"runArgs": ["--init"]
}
